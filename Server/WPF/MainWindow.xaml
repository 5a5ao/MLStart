<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Server Application" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListView x:Name="ClientListView" Grid.Row="0" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Client IP" DisplayMemberBinding="{Binding IPAddress}" Width="150"/>
                    <GridViewColumn Header="Port" DisplayMemberBinding="{Binding Port}" Width="50"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button x:Name="StartButton" Grid.Row="1" Margin="10" Width="100" Height="30" Content="Start Server" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Grid.Row="1" Margin="10,0,120,0" Width="100" Height="30" Content="Stop Server" Click="StopButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
